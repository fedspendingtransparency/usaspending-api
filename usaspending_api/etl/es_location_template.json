{
  "settings": {
    "index.mapping.ignore_malformed": true,
    "index.max_result_window": null,
    "index.refresh_interval": -1,
    "index": {
      "number_of_shards": 5,
      "number_of_replicas": 0
    },
    "analysis": {
      "analyzer": {
        "contains_analyzer": {
          "type": "custom",
          "tokenizer": "ngram",
          "filter": [
            "uppercase"
          ]
        },
        "edge_ngram_analyzer": {
          "tokenizer": "edge_ngram_tokenizer"
        }
      },
      "tokenizer": {
        "edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 10,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "country_name": {
        "type": "text",
        "fields": {
          "contains": {
            "type": "text",
            "analyzer": "contains_analyzer"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "state_name": {
        "type": "text"
      },
      "city_name": {
        "type": "text"
      },
      "county_name": {
        "type": "text"
      },
      "county_fips": {
        "type": "text"
      },
      "zip_code": {
        "type": "text"
      },
      "current_congressional_district": {
        "type": "text"
      },
      "original_congressional_district": {
        "type": "text"
      },
      "formatted_state": {
        "type": "text",
        "fields": {
          "contains": {
            "type": "text",
            "analyzer": "contains_analyzer"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "formatted_city": {
        "type": "text",
        "analyzer": "edge_ngram_analyzer",
        "fields": {
          "contains": {
            "type": "text",
            "analyzer": "contains_analyzer"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "formatted_county": {
        "type": "text",
        "fields": {
          "contains": {
            "type": "text",
            "analyzer": "contains_analyzer"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "formatted_zip": {
        "type": "text",
        "fields": {
          "contains": {
            "type": "text",
            "analyzer": "contains_analyzer"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "formatted_current_congressional_district": {
        "type": "text",
        "fields": {
          "contains": {
            "type": "text",
            "analyzer": "contains_analyzer"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "formatted_original_congressional_district": {
        "type": "text",
        "fields": {
          "contains": {
            "type": "text",
            "analyzer": "contains_analyzer"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      }
    }
  }
}