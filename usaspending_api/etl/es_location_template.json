{
  "settings": {
    "index.mapping.ignore_malformed": true,
    "index.max_result_window": null,
    "index.refresh_interval": -1,
    "index": {
      "number_of_shards": 5,
      "number_of_replicas": 0
    },
    "analysis": {
      "analyzer": {
        "contains_analyzer": {
          "type": "custom",
          "tokenizer": "ngram",
          "filter": [
            "uppercase"
          ]
        },
        "edge_ngram_analyzer": {
          "tokenizer": "edge_ngram_tokenizer"
        }
      },
      "tokenizer": {
        "edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 10,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "location": {
        "type": "text",
        "fields": {
          "contains": {
            "type": "text",
            "analyzer": "contains_analyzer"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "location_json": {
        "type": "object",
        "enabled": false
      },
      "location_type": {
        "type": "keyword"
      }
    }
  }
}